{
  "name": "Rust DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "fill-labs.dependi",
        "tamasfe.even-better-toml",
        "github.vscode-github-actions"
      ],
      "settings": {
        "rust-analyzer.check.command": "clippy",
        "rust-analyzer.cargo.features": "all",
        "rust-analyzer.procMacro.enable": true,
        "rust-analyzer.inlayHints.enable": true,
        "rust-analyzer.completion.addCallParentheses": false,
        "rust-analyzer.completion.addCallArgumentSnippets": false,
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "runArgs": ["--name", "strelitzia-dev"],
  "forwardPorts": [3000, 8000, 8080],
  "initializeCommand": "bash .devcontainer/init-host-git.sh",
  "postCreateCommand": "echo 'Verifying Rust installation...' && rustc --version && cargo --version && echo 'Post-create command completed.'",
  "postStartCommand": "bash .devcontainer/setup-git.sh",
  "remoteUser": "vscode",
  "updateRemoteUserUID": false
}
